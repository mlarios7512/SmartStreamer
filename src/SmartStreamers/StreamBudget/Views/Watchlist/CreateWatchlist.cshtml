@model StreamBudget.Models.Watchlist



<form id="create-watchlist-form" asp-action="CreateWatchlist" method="post">
    @Html.AntiForgeryToken()
    <h3 class="text-white mb-5">Create a watchlist</h3>

    <div class="mb-3 row">
        <label asp-for="Name" class="col-sm-2 col-form-label text-white"><span class="required-field">*</span> Watchlist name</label>
        <div class="col-sm-10 col-xxl-3">
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="StreamingPlatform" class="col-sm-2 col-form-label text-white">Streaming platform</label>
        <div class="col-sm-10 col-xxl-3">
            <input asp-for="StreamingPlatform" type="text" class="form-control" placeholder="Ex: Netflix">
            <span asp-validation-for="StreamingPlatform" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="SelectedStreamingCost" class="col-sm-2 col-form-label text-white">Subscription cost</label>
        <div class="col-sm-10 col-xxl-3">
            <input asp-for="SelectedStreamingCost" type="number" step="0.01" class="form-control" placeholder="Ex: 6.99">
            <span asp-validation-for="SelectedStreamingCost" class="text-danger"></span>
        </div>
    </div>
    <button class="btn btn-secondary mt-5">Create watchlist</button>
</form>